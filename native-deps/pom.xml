<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.mvnpm</groupId>
        <artifactId>esbuild-java-parent</artifactId>
        <version>2.0.0-beta-1</version>
    </parent>
    <artifactId>esbuild-java-native-deps</artifactId>
    <name>Esbuild Java - Native dependencies</name>
    <description>Link to native dependencies for EsBuild Java</description>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>gradle-module-metadata</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>target/publish</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>.</directory>
                                    <includes>
                                        <include>module.json</include>
                                    </includes>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-gradle-module-metadata</id>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/publish/module.json</file>
                                    <type>module</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>darwin-arm64</id>
            <activation>
                <os>
                    <arch>aarch64</arch>
                    <family>mac</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>darwin-arm64</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>darwin-arm64</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>darwin-x64</id>
            <activation>
                <os>
                    <arch>amd64</arch>
                    <family>mac</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>darwin-x64</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>darwin-x64</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>linux-x64</id>
            <activation>
                <os>
                    <arch>amd64</arch>
                    <family>linux</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>linux-x64</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>linux-x64-glibc</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>linux-arm</id>
            <activation>
                <os>
                    <arch>aarch64</arch>
                    <family>linux</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>linux-arm</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>linux-arm64-glibc</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>windows-x64</id>
            <activation>
                <os>
                    <arch>amd64</arch>
                    <family>windows</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>win32-x64</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>win32-x64</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>windows-arm64</id>
            <activation>
                <os>
                    <arch>aarch64</arch>
                    <family>windows</family>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.mvnpm.at.esbuild</groupId>
                    <artifactId>win32-arm64</artifactId>
                    <version>${esbuild.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.mvnpm.at.deno</groupId>
                    <artifactId>win32-arm64</artifactId>
                    <version>${deno.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
